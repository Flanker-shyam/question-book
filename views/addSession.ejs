<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Question Book</title>
    <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/styles.min.css">
</head>

<body style="transform: perspective(0px) translate(0px);">
    <%- include ("Partials/navbar.ejs") %>

        <form class="border rounded shadow p-3 p-md-4 p-lg-5" method="post" style="width: 90%; margin: 2% auto;">
            <h1>Add Session</h1>
            <label class="form-label">College Name:&nbsp;</label>
            <div class="mb-3">

                <select name="collegeID" id="college" class="form-control">
                    <option value="">Select College</option>
                    <% for(var i=0; i < colleges.length; i++) { %>
                        <option value="<%= colleges[i]._id %>">
                            <%= colleges[i].instituteName %>
                        </option>
                        <% } %>
                </select>
            </div>
            <label class="form-label">Session :&nbsp;</label>
            <div class="mb-3">
                <input type="text" name="session" id="session" class="form-control" placeholder="2022 Spring_Semester">
            </div>

            <div class="mb-3"><button class="btn btn-primary" type="submit">ADD Session</button>
            </div>
        </form>

        <%- include("Partials/footer.ejs") %>
            <script src="bootstrap/js/bootstrap.min.js"></script>
</body>

</html>